    "husky": "^7.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^11.1.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
